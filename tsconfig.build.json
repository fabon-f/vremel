{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"types": [],
		"noEmit": false,
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"allowJs": false,
		"isolatedDeclarations": true,
		"erasableSyntaxOnly": true,
		"stripInternal": true
	},
	"include": ["src/**/*"],
	"exclude": ["**/*.test.ts", "src/_test"]
}
