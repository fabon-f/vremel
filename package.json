{
	"name": "vremel",
	"version": "0.6.2",
	"description": "JavaScript date utility library for Temporal API",
	"type": "module",
	"exports": {
		".": "./dist/index.js",
		"./duration": "./dist/duration/index.js"
	},
	"sideEffects": false,
	"engines": {
		"node": ">=18"
	},
	"files": [
		"src/**/*.ts",
		"!src/**/*.test.ts",
		"!src/_test/**/*",
		"dist",
		"CHANGELOG.md"
	],
	"scripts": {
		"build": "node script/build.ts && node script/check-build.ts",
		"test": "POLYFILL=@js-temporal/polyfill vitest",
		"test-firefox": "playwright install --with-deps firefox && vitest --browser.enabled=true",
		"test-ci": "POLYFILL=@js-temporal/polyfill vitest && POLYFILL=temporal-polyfill vitest",
		"typecheck": "tsc",
		"lint": "eslint . && oxfmt . --check",
		"repl": "node script/build.ts --dev && node script/repl.ts",
		"docs:generate": "deno doc --output=./_site --unstable-byonm --unstable-sloppy-imports --html src/index.ts src/duration/index.ts"
	},
	"homepage": "https://github.com/fabon-f/vremel#readme",
	"bugs": {
		"url": "https://github.com/fabon-f/vremel/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fabon-f/vremel.git"
	},
	"keywords": [
		"Temporal"
	],
	"author": "fabon <syobon.hinata.public@gmail.com> (https://www.fabon.info/)",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@js-temporal/polyfill": "^0.5.1",
		"@tsconfig/strictest": "^2.0.8",
		"@types/node": "^25.0.9",
		"@typescript/native-preview": "latest",
		"@vitest/browser-playwright": "^4.0.17",
		"consola": "^3.4.2",
		"date-fns": "^4.1.0",
		"eslint": "^9.39.2",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"globals": "^17.0.0",
		"oxfmt": "0.25.0",
		"playwright": "^1.57.0",
		"temporal-polyfill": "0.3.0",
		"temporal-spec": "^0.3.0",
		"tinyexec": "^1.0.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "8.53.1",
		"vite": "^7.3.1",
		"vitest": "^4.0.17"
	},
	"dependencies": {
		"@date-fns/utc": "^2.1.1"
	},
	"packageManager": "pnpm@10.28.1"
}
